@model MusicHelp.Models.LessonDetail

@{
    ViewBag.Title = "Details";
}

<div class="form-wrapper">
    <h4 class="form-header text-center">@Html.DisplayFor(model => model.LessonName)</h4>
    <p class="text-center">@Html.DisplayFor(model => model.LessonDescription)</p>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LessonID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LessonID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Instrument)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Instrument.InstrumentName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LessonDifficulty)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LessonDifficulty)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LessonSource)
        </dt>
        <dd>
            <a href="@Model.LessonLink" target="_blank">@Html.DisplayFor(model => model.LessonSource)</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedUtc)
        </dd>

    </dl>

    <p class="text-center">
        @Html.ActionLink("Update", "Edit", new { id = Model.LessonID }, new { @style = "color: #003300;" }) •
        @Html.ActionLink("Return to Lessons", "Index", new { @style = "color: #003300;" })
    </p>
</div>
